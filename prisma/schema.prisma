generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserStatus {
  PENDING
  ACTIVE
  INACTIVE
  SUSPENDED
}

model User {
  id         String     @id @default(uuid())
  first_name String
  last_name  String
  email      String     @unique
  contact    String?
  password   String
  status     UserStatus @default(PENDING)
  is_deleted Boolean    @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ResponseStatus {
  PENDING
  SUBMITTED
  REVIEWED
  APPROVED
  REJECTED
}

model Response {
  id         String         @id @default(uuid())
  form_id    String         @db.Uuid
  data       Json
  status     ResponseStatus @default(SUBMITTED)
  is_deleted Boolean        @default(false)
  created_by String?
  updated_by String?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  Form       Form?    @relation(fields: [formId], references: [id])
  formId     String?

  @@index([form_id])
}

enum FormStatus {
  DRAFT
  PUBLISHED
}

model Form {
  id          String     @id @default(uuid())
  name        String
  description String?
  questions   Json
  status      FormStatus @default(DRAFT)
  is_deleted  Boolean    @default(false)
  created_by  String?
  updated_by  String?
  created_at  DateTime   @default(now())
  updated_at  DateTime   @updatedAt

  // Relationship with responses
  responses Response[]

  @@index([status])
}
